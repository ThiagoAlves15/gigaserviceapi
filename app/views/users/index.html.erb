<h1>Users</h1>

<div class="mb-2">
  <%= page_entries_info @users %>
</div>

<%= render "user_pagination" %>

<div id="users">
  <table class="table table-striped table-bordered table-hover users-list__desktop">
    <thead class="thead-dark">
      <tr>
        <th>Picture</th>
        <th>Full Name</th>
        <th>Gender</th>
        <th>Email</th>
        <th>Naturalization</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.avatar.variant(resize_to_limit: [100, 100]) %></td>
          <td>
            <%= link_to "#{user.name["title"]} #{user.name["first"]} #{user.name["last"]}", user %>
          </td>
          <td><%= user.gender %></td>
          <td><%= user.email %></td>
          <td><%= user.naturalization %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="users-list__mobile">
    <% @users.each do |user| %>
      <%= render partial: "user_card", locals: {user: user} %>
    <% end %>
  </div>
</div>

<%= render "user_pagination" %>
